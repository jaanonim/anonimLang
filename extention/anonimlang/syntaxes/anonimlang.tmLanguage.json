{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "anonimLang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#varibles"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#strings2"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#blocComment"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.anonimlang",
				"match": "\\b(if|else|elif|while|for|return|break|continue)\\b"
			}]
		},
		"comment":{
			"patterns": [{
				"name": "comment.line.double-slash.anonimlang",
				"match": "//.*$"
			}]
		},
		"blocComment":{
			"name": "comment.block.anonimlang",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"varibles":{
			"patterns": [{
				"name": "storage.type.anonimlang",
				"match": "\\b(def|var)\\b"
			}]
		},
		"numbers":{
			"name": "constant.numeric.anonimlang",
			"match": "[0-9]+\\.?[0-9]*"
		},
		"operator":{
			"patterns": [{
				"name": "keyword.operator.anonimlang",
				"match": "\\b(or|and|not)\\b"
			}]
		},
		"constants":{
			"patterns": [{
				"name": "constant.language.anonimlang",
				"match": "\\b(TRUE|FALSE|NULL)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.anonimlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.anonimlang",
					"match": "\\\\."
				}
			]
		},
		"strings2": {
			"name": "string.quoted.single.anonimlang",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.anonimlang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ano"
}